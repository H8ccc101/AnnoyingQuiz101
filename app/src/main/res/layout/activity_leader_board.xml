<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
    android:id="@+id/tv_leader_board_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:lineSpacingExtra="10sp"
    android:padding="20dp"
    android:text="@string/tv_leader_board_title"
    android:textAllCaps="true"
    android:textColor="@color/colorAccent"
    android:textSize="18sp"
    android:textStyle="bold"
    android:typeface="normal" />

    <TextView
        android:id="@+id/tv_leader_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:text="@string/tv_leader_board_title"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/btn_rank_by_name"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="@string/leaders_by_name"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_rank_by_score"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="@string/leaders_by_score"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />
</LinearLayout>
